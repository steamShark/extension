{
  "manifest_version": 3,
  "name": "ðŸ¦ˆSteamShark",
  "version": "1.1.0",
  "description": "Steam shark is an extension that verifies if the page you're getting is a scam website or not.",
  "author": "Francisco Borges",
  "content_scripts": [
    {
      "js": ["src/content_scripts/content.ts"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "src/service_workers/background.ts"
  },

  "action": {
    "default_title": "SteamShark",
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "logos/16.png",
      "32": "logos/32.png",
      "48": "logos/48.png",
      "128": "logos/128.png"
    }
  },
  "options_page": "src/options/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "warning/index.html",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "logos/16.png",
    "32": "logos/32.png",
    "48": "logos/48.png",
    "128": "logos/128.png"
  }
}
